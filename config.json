{
    "listeners": {
        "*:8080": {
            "pass": "routes"
        }
    },
    "routes": [
        {
            "match": {
                "headers": {
                    "accept": "*text/html*"
                }
            },
            "action": {
                "share": [
                    "/www/$host$uri.html",
                    "/www/$host$uri",
                    "/www/$uri"
                ],
                "fallback": {
                    "pass": "applications/nodejs"
                }
            }
        },
        {
            "action": {
                "share": [
                    "/www/$host$uri",
                    "/www/$uri",
                    "/www/404.html"
                ]
            }
        }
    ],
    "applications": {
        "nodejs": {
            "type": "external",
            "stderr": "error.log",
            "stdout": "output.log",
            "working_directory": "/www/",
            "executable": "/usr/bin/env",
            "arguments": [
                "node",
                "--loader",
                "unit-http/loader.mjs",
                "--require",
                "unit-http/loader",
                "app.js"
            ]
        }
    }
}